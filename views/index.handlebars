<div>
    <div>
        <h1>Greetings App</h1>

        <form action="/greetings" method="post">
            <div><span>Enter Name</span>
                <input type="text" name="user" class="user"></div>

            <div>
                <label>
                    <input type="radio" name="language" class="languageRadio" value="english">
                    <span>English</span>
                </label>
                <label>
                    <input type="radio" name="language" class="languageRadio" value="isixhosa">
                    <span>Isixhosa</span>
                </label>
                <label>
                    <input type="radio" name="language" class="languageRadio" value="afrikaans">
                    <span>Afrikaans</span>
                </label>
            </div>

            <div>
                <button type="submit" class="greetBtn">Greet</button>
            </div>
            <div>
                <h3><span>{{greet.greeting}}</span></h3>
                <h3><span>{{counter.count}}</span></h3>
            </div>
            <div class="error">
                <h3>
                    {{messages.error}}
                </h3>
            </div>
            <a href="greeted">Greeted</a>

        </form>
    </div>

    <hr>

    <div>
        <form action="/reset" method="get">
            <button type="submit">Reset</button>

        </form>
    </div>
</div>

<script>
    setTimeout(function () {
        document.querySelector(".error").innerHTML = ""
    }, 2000)
</script>